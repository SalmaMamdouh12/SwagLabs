<suite name="Create Positive Scenarios for Login Features" parallel="tests" thread-count="3">
    <parameter name="browser" value=""/>

    <test name="Check Positive Scenario for Login Feature in SwagLabs Web App on Chrome">
        <parameter name="browser" value=""/>
        <classes>
            <class name="testcases.TC01_Login">
                <methods>
                    <include name="loginWithValidData_P"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check Positive Scenario for Login Feature in SwagLabs Web App on Firefox">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="testcases.TC01_Login">
                <methods>
                    <include name="loginWithValidData_P"/>
                </methods>
            </class>
        </classes>
    </test>
    <test name="Check Positive Scenario for Login Feature in SwagLabs Web App on Edge">
